<%- include("partials/header") -%> 
<h1>Edit post</h1>
<form method="POST" action="/update/<%= post._id %> ">
    <label for="postTitle">Title</label>
    <input class="form-control" type="text" id="postTitle" name="postTitle" value="<%=post.postTitle%>">
    <label for="postBody">Body</label>
    <textarea class="form-control" id="postBody" name="postBody" rows="10"><%= postBody %> </textarea>
    <button class="btn btn-primary" type="submit">Save</button>  
</form>
<%- include("partials/footer") -%> 