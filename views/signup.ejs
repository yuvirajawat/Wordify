            <!-- Makes POST request to /login route -->
            <form action="/signup" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" required="true" class="form-control" name="username">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" required="true" class="form-control" name="password">
              </div>
              <div class="form-group">
                <label for="password">Confirm Password</label>
                <input type="password" required="true" class="form-control" name="confirmedPassword">
              </div>
              <button type="submit" class="btn btn-dark">Sign Up</button>
            </form>
          </div>
        </div>
      </div>
